<Window x:Class="DeliveryServiceManager.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" Height="250" Width="350"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="DeliveryService Manager" 
                       FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Логин:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtLogin" Margin="0,0,0,15"/>

            <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,20"/>

            <TextBlock x:Name="txtError" Foreground="Red" 
                       Margin="0,0,0,10" TextWrapping="Wrap"/>

            <Button Content="Войти" Click="LoginButton_Click" 
                    Height="30" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>